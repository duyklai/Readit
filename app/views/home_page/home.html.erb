<div class="posts-container">
  <% @posts.each do |post| %>
    <div class="post-div">
      <div class="home-post-points">
        <p class="home-inc-points">&#9650;</p>
        <p class="home-points"><%= display_points(post.points) %></p>
        <p class="home-dec-points">&#9660;</p>
      </div>
      <div class="home-post-title">
        <%= link_to post.title, post_path(post.id) %>
      </div>
      <div class="home-post-info">
        Submitted <%= time_diff(post.created_at) %> ago by
        <%= post.user.username %>
        <% if post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<br />
<%= link_to "Create a New Post", new_post_path, class: "new_article" %>
