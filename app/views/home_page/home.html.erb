<div class="home-title">
  <h1>Weclome to Readit</h1>
</div>

<div class="posts-container">
  <table class="posts-table">
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td>Points: <%= post.points %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "Create a New Post", new_post_path, class: "new_article" %>
