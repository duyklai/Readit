<div class="registration-div">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters min.)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
      <%= link_to "Back", :back %>
    </div>
    <div class="login-extra">
      Already have an account? <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
